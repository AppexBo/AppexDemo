<odoo>
    <template id="l10n_bo_bolivian_invoice.report_roll">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="width: 80mm; font-size: 10pt; margin: 2mm; padding: 0;">
                    <style>
                            body {
                                margin: 0;
                                padding: 0;
                                font-family: Arial, sans-serif;
                            }
                            .page {
                                width: 80mm;
                                font-size: 10pt;
                                line-height: 1.2;
                            }
                            h2 {
                                font-size: 12pt;
                                text-align: center;
                                margin: 2mm 0;
                            }
                            p {
                                margin: 1mm 0;
                            }
                            table {
                                width: 100%;
                                border-collapse: collapse;
                                font-size: 9pt;
                            }
                            th, td {
                                padding: 1mm;
                                text-align: left;
                            }
                            th {
                                font-weight: bold;
                            }
                            .total {
                                font-weight: bold;
                                text-align: right;
                            }
                            hr {
                                border: 0;
                                border-top: 1px solid #000;
                                margin: 2mm 0;
                            }
                        </style>
                    <h2>NUEVO PRUEBA</h2>
                    <p>
                        <strong>NIT:</strong>
                        <t t-esc="o.company_id.vat"/>
                    </p>
                    <p>
                        <strong>Razón Social:</strong>
                        <t t-esc="o.company_id.name"/>
                    </p>
                    <p>
                        <strong>Factura N°:</strong>
                        <t t-esc="o.name"/>
                    </p>
                    <p>
                        <strong>Fecha:</strong>
                        <t t-esc="o.invoice_date"/>
                    </p>
                    <hr/>
                    <table>
                        <thead>
                            <tr>
                                <th style="width: 40%;">Producto</th>
                                <th style="width: 20%;">Cant.</th>
                                <th style="width: 20%;">Precio</th>
                                <th style="width: 20%;">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.invoice_line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <t t-esc="line.name" t-options='{"widget": "text", "truncate": 20}'/>
                                    </td>
                                    <td>
                                        <t t-esc="line.quantity" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td>
                                        <t t-esc="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td>
                                        <t t-esc="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <hr/>
                    <p class="total">
                        <strong>Total:</strong>
                        <t t-esc="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </p>
                    <p style="text-align: center; font-size: 8pt;">Gracias por su compra</p>
                </div>
            </t>
        </t>
    </template>
</odoo>