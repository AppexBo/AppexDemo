<odoo>
    <record id="view_gestor_rol_form" model="ir.ui.view">
        <field name="model">gestor.rol</field>
        <field name="arch" type="xml">
            <form string="Rol">
                <group>
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="usuario_ids" widget="many2many_tags"/>
                </group>
                <notebook>
                    <page string="Permisos">
                        <field name="permiso_ids">
                            <tree editable="bottom">
                                <field name="modelo_id"/>
                                <field name="perm_read"/>
                                <field name="perm_write"/>
                                <field name="perm_create"/>
                                <field name="perm_unlink"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_gestor_rol_tree" model="ir.ui.view">
        <field name="model">gestor.rol</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <record id="action_gestor_rol" model="ir.actions.act_window">
        <field name="name">Gestor de Roles</field>
        <field name="res_model">gestor.rol</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_gestor_root" name="GestiÃ³n de Roles"/>
    <menuitem id="menu_gestor_rol" name="Roles" parent="menu_gestor_root" action="action_gestor_rol"/>
</odoo>